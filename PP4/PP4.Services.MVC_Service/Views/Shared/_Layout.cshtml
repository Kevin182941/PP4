<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Proyecto de Programación 4</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <div class="navbar-default" style="margin-bottom : 0px  ">
        <h1>
            <img src="~/Images/6109dc9cf92600c605dd0f7a52062b0f_icon.png" />¡Welcome to the Movie Theaters App!
        </h1>
    </div>


</head>
<body>
    <div class="navbar  navbar-inverse navbar ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Maintenance", "Index", "Main", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Room", "Index", "Room")</li>
                    <li>@Html.ActionLink("Movie", "Index", "Movie")</li>
                    <li>@Html.ActionLink("Schedule", "Index", "Schedule")</li>
                    <li>@Html.ActionLink("Batch", "Index", "Batch")</li>
                    <li>@Html.ActionLink("Person", "Index", "Person")</li>
                    <li>@Html.ActionLink("Purchase", "Index", "Purchase")</li>
                    <li>@Html.ActionLink("Seat", "Index", "Seat")</li>
                    <li>@Html.ActionLink("PurchaseSeat", "Index", "PurchaseSeat")</li>




                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Proyecto de Programación 4</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
